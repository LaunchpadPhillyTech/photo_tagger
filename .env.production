# Production Environment Configuration
# Copy this to .env.production for production deployment

# Google OAuth 2.0 Configuration
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_PROJECT_ID=your-google-project-id-here

# OAuth Redirect URI (update with your actual domain)
OAUTH_REDIRECT_URI=https://yourdomain.com/callback/oauth2callback

# Flask Configuration
FLASK_SECRET_KEY=your-super-secure-secret-key-here
PRODUCTION=true

# Application Configuration
PORT=8080

# Database Configuration (for production)
DATABASE_FILE=/app/data/photo_tagger.db
DATABASE_TABLE=photos
DATABASE_SCHEMA_VERSION=1
DATABASE_BACKUP_FILE=/app/data/photo_tagger_backup.db
