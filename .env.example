# python -c 'import os; print(os.urandom(24).hex())'
PORT=YOUR_PORT_HERE
HOST=YOUR_HOST_HERE
FLASK_SECRET_KEY="YOUR_SUPER_SECRET_KEY_HERE"


# DATABASE Configuration
DATABASE_FILE=photo_tagger.db
DATABASE_TABLE=photos
DATABASE_SCHEMA_VERSION=1
